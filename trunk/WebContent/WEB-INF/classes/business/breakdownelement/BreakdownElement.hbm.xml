<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >

<hibernate-mapping>
	<class name="business.breakdownelement.BreakdownElement" table="BreakdownElement">
		<!-- identifiant d'une occurrence dans la table -->
		<id
			column="id"
			name="id"
			type="integer"
		>
			<!--identifiant auto-incrementÃ© --> 
			<generator class="identity" />
		</id>
		
		<property
			column="prefix"
			length="50"
			name="prefix"
			not-null="false"
			type="string"
		 />	
		 
		 <property
			column="name"
			length="50"
			name="name"
			not-null="true"
			type="string"
		 />	
		 
		 <property
			column="details"
			name="details"
			not-null="false"
			type="string"
		 />	
		 
		 <property
			column="startDate"
			name="startDate"
			not-null="false"
			type="date"
		 />
		 
		 <property
			column="endDate"
			name="endDate"
			not-null="false"
			type="date"
		 />	
		
		 <many-to-one
			class="business.breakdownelement.BreakdownElementKind"
			name="kind"
			not-null="true"
			>
			<column name="kind" />
		</many-to-one>
		
		<set name="users" table="UserBDE" lazy="true">
      		<key column="bde"/>
      		<many-to-many class="business.user.User" column="user"/>
    	</set>
		
	</class>	
</hibernate-mapping>