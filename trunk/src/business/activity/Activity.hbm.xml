<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >

<hibernate-mapping>
	<class name="business.activity.Activity" table="Activity">
		<!-- identifiant d'une occurrence dans la table -->
		<id
			column="id"
			name="id"
			type="integer"
		>
			<!--identifiant auto-incrementÃ© --> 
			<generator class="identity" />
		</id>
		
		<property
			column="name"
			length="50"
			name="name"
			not-null="true"
			type="string"
		 />	
		 
		 <property
			column="details"
			name="details"
			not-null="false"
			type="string"
		 />	
		 
		 <property
			column="startDate"
			name="startDate"
			not-null="false"
			type="timestamp"
		 />
		 
		 <property
			column="endDate"
			name="endDate"
			not-null="false"
			type="timestamp"
		 />	
		
		 <property
			column="user"
			name="userId"
			not-null="false"
			type="integer"
		 />
		 
		 <property
			column="ongoing"
			length="3"
			name="onGoing"
			not-null="false"
			type="string"
		 />	
		 
		 <many-to-one
			class="business.activity.state.IActivityState"
			name="state"
			not-null="true"
			>
			<column name="state" />
		</many-to-one>
		
		<property
			column="bde"
			name="bdeId"
			not-null="false"
			type="integer"
		/>
		 
		<one-to-one
			class="business.event.Event"
			name="event"
			property-ref="activity"
		/>
		

		 
		<!-- Historisation des modifications -->
		<property column="datecreation" name="dateCreation" not-null="false" type="date"/>
		<property column="usercreation" name="userCreation" not-null="false" type="integer"/>
		<property column="dateupdate" name="dateModification" not-null="false" type="date"/>
		<property column="userupdate" name="userModification" not-null="false" type="integer"/>

	</class>	
</hibernate-mapping>
